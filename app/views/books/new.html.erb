<div class="users-new-wrapper">
 <div class="container">
   <div class="row">
     <div class="col-md-offset-4 col-md-4 users-new-container">
       <h1 class="text-center text-white">Add to Book</h1>
       <%= form_for @book do |f|%>
         <div class="form-group">
           <%=f.label :title, class: 'text-white'%>
           <%=f.text_field :title, class: 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :author, class: 'text-white' %>
            <%= f.text_field :author, class: 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :publisher, class: 'text-white' %>
            <%= f.text_field :publisher, class: 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :image, class: 'text-white' %>
              <%= f.file_field :image %>
         </div>
         <div class="form-group">
            <%= f.label :description, class: 'text-white' %>
            <%= f.text_field :description, class: 'form-control' %>
         </div>

          <%= f.submit "追加する", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
